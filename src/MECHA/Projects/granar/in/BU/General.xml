<?xml version="1.0" encoding="utf-8"?>
<!--#General options-->

<properties>
	<!-- OS -->
	<OS value='Windows'/> <!-- The current version seems fully compatible for both Mac and Windows -->
	
	<!-- Main output folder -->
	<Output path='out/Tomato/'/> <!-- Path to output file folders, no"&" sign allowed in the folder name -->
	
	<!-- Paraview outputs? -->
	<Paraview value="1" WallFlux="1" MembraneFlux="1" PlasmodesmataFlux="0" WallPot="1" CellPot="1"/> <!-- 0:No paraview outputs saved, 1:Saving paraview outputs -->
    
	<!-- Particle tracking outputs? -->
	<ParTrack value="0"/> <!-- 0:No particle tracking outputs saved, 1:Saving particle tracking outputs (field of water flow rates) -->
	
	<!-- Symplastic or apoplastic contagion outputs? -->
	<Sym_Contagion value="0"/> <!-- 0:No contagion outputs saved, 1:Saving cell IDs that receive convective PD flow (in)directly from a given source cell -->
	<Apo_Contagion value="0"/> <!-- 0:No contagion outputs saved, 1:Saving wall IDs that receive convective apoplastic flow (in)directly from a given source cell wall -->
	
    <!-- Paraview display options -->
	<color_threshold value="1.0"/> <!-- Values above 80% of maximum all saturate -->
	<thickness_disp value="2.0"/> <!-- (micrometers) Double cell wall thickness at wall nodes -->
	<thicknessJunction_disp value="2.5"/> <!-- (micrometers) Double cell wall thickness at wall junctions -->
	<radiusPlasmodesm_disp value="4.0"/> <!-- (micrometers) Radius of plasmodesmata for display (not actual radius) -->
	<UniXwalls value="0"/> <!-- When using PD_freq_source==2. 0: Colours may vary along thick walls; 1: uniform colours along each thick wall -->
	
	<!-- Use of sparse matrices (yes or no for 2-D simulations; always yes for 3-D simulations) -->
	<sparse value="1"/> <!-- 0:No, 1:Yes -->
</properties>